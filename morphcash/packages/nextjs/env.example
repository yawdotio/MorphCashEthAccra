# MorphCash Environment Configuration
# Copy this file to .env.local and fill in your values

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================

# WalletConnect Project ID (Get from: https://cloud.walletconnect.com)
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID=your_project_id_here

# Alchemy API Key (Get from: https://dashboard.alchemyapi.io)
NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_key_here

# =============================================================================
# DATABASE CONFIGURATION (SUPABASE) - REQUIRED
# =============================================================================

# Supabase Configuration (Get from: https://supabase.com/dashboard)
# Sign up at https://supabase.com, create a project, and get these from Settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-here

# Encryption Key for sensitive data (CHANGE THIS IN PRODUCTION!)
NEXT_PUBLIC_ENCRYPTION_KEY=your-32-character-encryption-key-here

# =============================================================================
# MTN MOBILE MONEY API CONFIGURATION
# =============================================================================

# MTN Collections API (Get from: https://momodeveloper.mtn.com)
MTN_SUBSCRIPTION_KEY=your-mtn-subscription-key
MTN_API_USER_ID=your-mtn-api-user-id
MTN_API_KEY=your-mtn-api-key
MTN_ENVIRONMENT=sandbox
MTN_TARGET_ENVIRONMENT=sandbox

# =============================================================================
# COINBASE DEVELOPER PLATFORM CONFIGURATION
# =============================================================================

# Coinbase Developer Platform (Get from: https://portal.cdp.coinbase.com)
NEXT_PUBLIC_COINBASE_API_KEY=your-coinbase-api-key-here
NEXT_PUBLIC_COINBASE_BASE_URL=https://api.coinbase.com
NEXT_PUBLIC_COINBASE_ENVIRONMENT=sandbox

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================

# Database Settings
NEXT_PUBLIC_DATABASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_DATABASE_REGION=us-east-1
NEXT_PUBLIC_ENABLE_CACHING=true
NEXT_PUBLIC_CACHE_TIMEOUT=300000
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_REALTIME=true

# Development Settings
NODE_ENV=development
